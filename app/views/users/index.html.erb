<body>
<table class= "table table-striped" id = "account-table">
	<thead>
		<% if @users %>
		<tr>
			<th>Account</th>
			<th>Competitors</th>
			<th colspan="3"></th>
		</tr>
		<% end %>
	</thead>
	<tbody>
		
		<% @users.each do |user| %>
		<tr>
		<td><%= user.username %></td>
		<td><%= user.competitor_count(user)%></td>
		<td></td>
		<td><%= link_to 'Edit', edit_user_path(user), :class => "btn btn-xs btn-default" %></td>
		<td><%= link_to 'âœ—', user, method: :delete, :class => "btn btn-xs btn-danger" %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<%= link_to '+', new_user_path, :class => "btn btn-sm btn-success", remote: true %>
<div class = "buttons">
  <%= link_to 'Export To CSV', accounts_path(format: :csv),:class => "btn btn-sm btn-success"  %>
</div>
</body>

<div id="user-form" style="display:none;"></div>